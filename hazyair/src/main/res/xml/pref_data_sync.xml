<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_sync_on_boot"
        android:summary="@string/pref_description_sync_on_boot"
        android:title="@string/pref_title_sync_on_boot" />

    <ListPreference
