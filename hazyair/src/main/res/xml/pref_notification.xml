<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_notifications_on_boot"
        android:summary="@string/pref_description_notifications_on_boot"
        android:title="@string/pref_title_notifications_on_boot" />

    <ListPreference
        android:defaultValue="30"
        android:entries="@array/pref_notifications_frequency_titles"
        android:entryValues="@array/pref_notifications_frequency_values"
        android:key="@string/pref_key_notifications_frequency"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_notifications_frequency" />

</PreferenceScreen>
